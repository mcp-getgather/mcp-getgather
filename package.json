{
  "name": "mcp-getgather",
  "version": "0.0.0",
  "type": "module",
  "volta": {
    "node": "22.18.0",
    "npm": "10.8.2"
  },
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:backend": "uv run -m uvicorn getgather.main:app --reload --host 127.0.0.1 --port 23456",
    "frontend:check:format": "prettier --check \"**/*.{html,js,jsx,ts,tsx,css,json,md}\"",
    "frontend:format": "prettier --write \"**/*.{html,js,jsx,ts,tsx,css,json,md}\"",
    "backend:check:format": "uv run ruff check && uv run ruff format --check",
    "backend:format": "uv run ruff format && uv run ruff check --fix",
    "backend:check:type-safety": "uv run pyright .",
    "yaml:check:format": "uv run yamlfix --check $(find . -type f -name '*.yml' -o -name '*.yaml' | grep -v -E '\\.venv/|node_modules/')",
    "yaml:format": "uv run yamlfix $(find . -type f -name '*.yml' -o -name '*.yaml' | grep -v -E '\\.venv/|node_modules/')",
    "check:all": "npm run frontend:check:format && npm run backend:check:format && npm run backend:check:type-safety && npm run yaml:check:format",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.7.3"
  }
}
